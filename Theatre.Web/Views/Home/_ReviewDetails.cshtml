@model Theatre.Web.Models.ReviewDetailsViewModel 

@if (Model.Description != null)
{
    <div class="description">Description: @Model.Description</div>
}

@if (Model.Comments.Any())
{
    @:Comments:
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>
                @comment.Text
                @if (@comment.Author != null)
                {
                    @: (by @comment.Author)
                }
            </li>
        }
    </ul>
}
else
{
    <p>No comments</p>
}

@if (ViewBag.CanEdit)
{
    @Html.ActionLink("Edit", "Edit", "Reviews", new { id = Model.Id }, new { @class = "btn btn-default" })
    <span></span>
   @Html.ActionLink("Delete", "Delete", "Reviews", new { id = Model.Id }, new { @class = "btn btn-default" })
}
